<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/activity_disease_recommender"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
       tools:context="com.example.consultation.myapplication.DiseaseRecommender">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease Recommender System"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="26dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="15dp"
            android:background="#137FF3"
            android:text="Start"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Do you have the following symtoms? Please select 1 and click next."
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"
            android:textColor="#000"
            android:hint="Symptoms"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText" />


        <RadioGroup
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Yes"
                android:textColor="#000"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginBottom="126dp"
                android:text="No"
                android:textColor="#000"
                android:textSize="20dp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="15dp"
            android:background="#137FF3"
            android:text="Next"
            android:textColor="#fff"
            android:textSize="18dp" />

    </LinearLayout>
</ScrollView>